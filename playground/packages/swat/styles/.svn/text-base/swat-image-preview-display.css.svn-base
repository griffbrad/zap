.swat-image-preview-display-link {
	/* note: relative positioning breaks background position in IE6 */
	font-size: 85%;
	padding-right: 16px;
	background-image: url(../images/swat-image-preview-display-zoom.png);
	background-position: top right;
	background-repeat: no-repeat;
}

.swat-image-preview-display-link img,
a.swat-image-preview-display-link-plain img {
	vertical-align: top;
	padding: 2px;
	background: #fff;
	border: 1px solid #dcceb2;
}

a.swat-image-preview-display-link:hover img,
a.swat-image-preview-display-link-plain:hover img {
	border-color: #3f5ace;
}

.swat-image-preview-overlay {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
}

.swat-image-preview-mask {
	position: relative;
	cursor: default;
	display: block;
	background: #000;
	width: 100%;
	height: 100%;
	-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=75)";
	filter:alpha(opacity = 75);
	opacity: 0.75;
}
.swat-image-preview-mask:focus,
.swat-image-preview-mask:active {
	outline: none;
}

.swat-image-preview-header {
	display: block;
	padding: 0 8px 8px;
	font-weight: bold;
}

.swat-image-preview-title {
	display: block;
}

.swat-image-preview-close {
	float: right;
	display: block;
	outline: none;
	cursor: pointer; /* For IE6 & 7 */
}

.swat-image-preview-container {
	text-decoration: none;
	position: absolute;
	text-align: left;
	border: 1px solid #dcceb2;
	background: #fff;
	padding: 8px;

	border-radius: 8px;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
}

.swat-image-preview-container:focus,
.swat-image-preview-container:active {
	outline: none;
}

.swat-image-preview-container img {
	display: block;
}
